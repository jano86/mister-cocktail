

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <% @cocktails.each do |cocktail| %>
        <div class="card">
          <h3> <%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
        </div>
      <% end %>
      <div>
        <%= link_to "Create a new cocktail", new_cocktail_path, {class: "btn btn-primary"}%>
      </div>
    </div>
  </div>
</div>