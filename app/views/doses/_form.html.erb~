
<% @ingredients = Ingredient.all %>

<div class="col-md-8 col-md-offset-2">
  <h2>Add a dose to the cocktail "<%= link_to @cocktail.name, cocktail_path(@cocktail) %>" </h2>
  <%= form_for([@cocktail, @dose]) do |f| %>

    <% if f.object.errors.present? %>
      <ul>
        <% f.object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="form-group">
      <%= f.label "Description of the dose" %>
      <%= f.text_field :description, class:"form-control"%>
    </div>

    <div class="form-group">
      <%= f.label "Ingredient" %>
      <%= f.collection_select(:ingredient_id, @ingredients, :id, :name) %>

    </div>

    <div class="form-group">
      <%= f.submit "Add the dose", class:"btn btn-success" %>
    </div>
  <% end %>
  <br>
  <%= link_to "Back to the Index", cocktails_path, {class: "btn btn-primary"} %>
</div>
